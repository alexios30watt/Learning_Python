import random
random.seed()
a = random.randint(1, 198857)
b = random.randint(1, 198857)
c = a + b 
print("Сложить", a, "+", b)

for versuch in range(1,10):
    print("Введите результат")
    z = input()
    zahl = int(z)
    if zahl == c:
        print("Вы дали правильный ответ. Результат", c)
        break
    else:  
        print(zahl, "Вы дали неправильный ответ. Результат", c)

print("правильный ответ", c)
print("У вас было", versuch, "попыток")
